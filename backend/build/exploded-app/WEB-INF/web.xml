<?xml version="1.0" encoding="utf-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

    <servlet>
        <servlet-name>RandomLoremServlet</servlet-name>
        <servlet-class>com.ayush.newsfeed.backend.RandomLoremServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RandomLoremServlet</servlet-name>
        <url-pattern>/randomLoremServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RandomFeedServlet</servlet-name>
        <servlet-class>com.ayush.newsfeed.backend.RandomFeedServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RandomFeedServlet</servlet-name>
        <url-pattern>/randomFeedServlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>